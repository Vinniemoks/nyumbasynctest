# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_SOCKET_URL=http://localhost:3001
VITE_ENVIRONMENT=development

# Production Example
# VITE_API_URL=https://api.nyumbasync.com
# VITE_SOCKET_URL=https://api.nyumbasync.com
# VITE_ENVIRONMENT=production

# Payment Gateway Configuration
# M-Pesa (Daraja API)
VITE_MPESA_CONSUMER_KEY=your-mpesa-consumer-key
VITE_MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
VITE_MPESA_SHORTCODE=your-mpesa-shortcode
VITE_MPESA_PASSKEY=your-mpesa-passkey

# Airtel Money
VITE_AIRTEL_CLIENT_ID=your-airtel-client-id
VITE_AIRTEL_CLIENT_SECRET=your-airtel-client-secret

# Telkom Money
VITE_TELKOM_API_KEY=your-telkom-api-key
VITE_TELKOM_MERCHANT_ID=your-telkom-merchant-id

# Card Payment Gateway (Stripe/Flutterwave)
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
VITE_FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# File Storage
VITE_FILE_STORAGE_URL=https://your-storage-bucket.s3.amazonaws.com
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-cloudinary-preset

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_ANALYTICS=false

# Optional: Third-party services
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_GOOGLE_ANALYTICS_ID=your-ga-id
